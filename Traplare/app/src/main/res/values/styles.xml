<resources>
    <style name="Theme.NoTitleBar.WithColoredSpinners" parent="@style/AppTheme">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SpinnerItem">
        <item name="android:textColor">#e8fafc</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SpinnerItem.DropDownItem">
        <item name="android:radius">10dp</item>
        <item name="android:textColor">#f7c7c7c7</item>
        <item name="android:textStyle">bold</item>
    <item name="android:background">#e5064e66</item>

    </style>
</resources>
