<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:orientation="horizontal"
    android:layout_width="300dp"
    android:layout_height="fill_parent"
    android:paddingTop="20dp"
    android:paddingHorizontal="10dp"
    android:background="@drawable/bg_trip"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView android:id="@+id/textView_agency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel programmed by"
            android:textSize="9dp"
            android:textColor="#101010"
            />

        <TextView android:id="@+id/textView_agency_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agency name"
            android:textSize="12dp"
            android:textColor="#101010"
            />

        <TextView
            android:id="@+id/textView_agency_provenance"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From"
            android:textSize="9dp"
            android:textColor="#101010" />

        <TextView
            android:id="@+id/textView_agency_provenance_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"

            android:text="Provenance value"
            android:textColor="#101010" />

        <TextView
            android:id="@+id/textView_agency_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="To"
            android:textSize="9dp"
            android:textColor="#101010" />

        <TextView
            android:id="@+id/textView_agency_destination_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destination value"
            android:textSize="12dp"

            android:textColor="#101010" />

        <TextView
            android:id="@+id/textView_departure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9dp"
            android:layout_marginTop="10dp"
            android:text="Departure hour"
            android:textColor="#101010" />

        <TextView
            android:id="@+id/textView_departure_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Departure value"
            android:textSize="12dp"
            android:textColor="#101010" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView android:id="@+id/textView_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel class"
            android:textSize="9dp"
            android:textColor="#101010"
            />

        <TextView android:id="@+id/textView_class_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class value"
            android:textSize="12dp"
            android:textColor="#101010"
            />

        <TextView
            android:id="@+id/textView_Price"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="9dp"
            android:textColor="#101010" />

        <TextView
            android:id="@+id/textView_Price_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"

            android:text="Price value"
            android:textColor="#101010" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="/-----"
            android:textSize="9dp"
            android:textColor="#101010" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/----- -----"
            android:textSize="12dp"

            android:textColor="#101010" />

        <TextView
            android:id="@+id/text7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9dp"
            android:layout_marginTop="10dp"
            android:text="/-----"
            android:textColor="#101010" />

        <TextView
            android:id="@+id/text8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/----- -----"
            android:textSize="12dp"
            android:textColor="#101010" />
    </LinearLayout>


</LinearLayout>