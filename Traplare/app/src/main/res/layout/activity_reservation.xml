<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".ReservationActivity">
    <ImageView
        android:id="@+id/imageView_back_to_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_back"
        android:background="@drawable/dw_back_to_menu"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="70dp"
        app:cardElevation="15dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/constraintLayout_ticket"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/textView_depart_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:gravity="left"
                android:text="Depart"
                android:textColor="#585BBB"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView_depart_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse de depart"
                android:textSize="11dp"
                app:layout_constraintLeft_toLeftOf="@id/textView_depart_title"
                app:layout_constraintTop_toBottomOf="@id/textView_depart_title" />

            <TextView
                android:id="@+id/textView_heure_depart_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 h 40 min"
                android:textSize="11dp"
                app:layout_constraintLeft_toLeftOf="@id/textView_depart_title"
                app:layout_constraintTop_toBottomOf="@id/textView_depart_value" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:src="@drawable/arrow"
                app:layout_constraintTop_toTopOf="@id/textView_arrive_title"
                app:layout_constraintBottom_toBottomOf="@id/textView_arrive_title"
                app:layout_constraintLeft_toRightOf="@id/textView_depart_title"
                app:layout_constraintRight_toLeftOf="@id/textView_arrive_title"/>

            <TextView
                android:id="@+id/textView_arrive_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrivée"
                android:textSize="13dp"
                android:textColor="#585BBB"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="50dp"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView_arrive_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Adresse d'arrivée"
                android:textSize="11dp"
                app:layout_constraintRight_toRightOf="@id/textView_arrive_title"
                app:layout_constraintTop_toBottomOf="@id/textView_arrive_title" />

            <TextView
                android:id="@+id/textView_heure_arrive_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="15 h 40 min"
                android:textSize="11dp"
                app:layout_constraintRight_toRightOf="@id/textView_arrive_title"
                app:layout_constraintTop_toBottomOf="@id/textView_arrive_value" />

            <TextView
                android:id="@+id/textView_tarif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="Catégorie"
                android:textColor="#585BBB"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/textView_depart_value"
                app:layout_constraintTop_toBottomOf="@+id/textView_heure_depart_value" />

            <TextView
                android:id="@+id/textView_tarif_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Normal"
                android:textSize="12dp"
                app:layout_constraintLeft_toLeftOf="@id/textView_depart_value"
                app:layout_constraintTop_toBottomOf="@id/textView_tarif" />

            <TextView
                android:id="@+id/textView_class_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="7000.0 XAF"
                android:textSize="12dp"
                app:layout_constraintRight_toRightOf="@id/textView_arrive_title"
                app:layout_constraintTop_toBottomOf="@+id/textView_class" />

            <TextView
                android:id="@+id/textView_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="Tarif"
                android:textColor="#585BBB"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="@id/textView_arrive_title"
                app:layout_constraintTop_toBottomOf="@+id/textView_heure_arrive_value" />

            <TextView
                android:id="@+id/textView_passager_nom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:gravity="left"
                android:text="Nom"
                android:textColor="#585BBB"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_tarif_value" />

            <TextView
                android:id="@+id/textView_passager_nom_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:text="N/A"
                android:textSize="11dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_passager_nom" />

            <TextView
                android:id="@+id/textView_passager_prenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:gravity="left"
                android:text="Prenom"
                android:textColor="#585BBB"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_passager_nom_value" />

            <TextView
                android:id="@+id/textView_passager_prenom_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:text="N/A"
                android:textSize="11dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_passager_prenom" />

            <TextView
                android:id="@+id/textView_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:gravity="left"
                android:text="Bus"
                android:textColor="#585BBB"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_class_value" />

            <TextView
                android:id="@+id/textView_bus_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:text="LT5404D"
                android:textSize="11dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_bus" />


            <TextView
                android:id="@+id/textView_siege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:gravity="left"
                android:text="Place"
                android:textColor="#585BBB"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_bus_value" />

            <TextView
                android:id="@+id/textView_siege_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:text="C25"
                android:textSize="11dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_siege" />

            <TextView
                android:id="@+id/textView_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:gravity="left"
                android:text="Téléphne"
                android:textColor="#585BBB"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_passager_prenom_value" />

            <TextView
                android:id="@+id/textView_telephone_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:text="N/A"
                android:textSize="11dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_telephone" />

            <TextView
                android:id="@+id/textView_date_reservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:gravity="left"
                android:text="Date"
                android:textColor="#585BBB"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_siege_value" />

            <TextView
                android:id="@+id/textView_date_reservation_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:text="12 Mar 2018"
                android:textSize="11dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_date_reservation" />

            <TextView
                android:id="@+id/textView_CNI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:gravity="left"
                android:text="CNI"
                android:textColor="#585BBB"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_telephone_value" />

            <TextView
                android:id="@+id/textView_CNI_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:text="N/A"
                android:textSize="11dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_CNI" />

            <TextView
                android:id="@+id/textView_heure_reservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:gravity="left"
                android:text="Heure"
                android:textColor="#585BBB"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_date_reservation_value" />

            <TextView
                android:id="@+id/textView_heure_reservation_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:text="18 h 45 min"
                android:textSize="11dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_heure_reservation" />

        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout_ticket">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:text="Reserver"
                android:layout_marginBottom="15dp"
                android:paddingHorizontal="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="#0987C1"
                android:textColor="#fff"
                android:shadowRadius="5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/flatbutton_edit_passager_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_edit"
        app:backgroundTint="#f1f1f1"
        app:elevation="16dp"
        app:fabCustomSize="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>