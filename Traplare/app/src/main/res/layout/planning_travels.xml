<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_template_travel2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:maxWidth="300dp"
    android:background="@drawable/travel_temp"
    android:orientation="vertical"
    android:paddingLeft="10dp"

    tools:context=".PlanningActivity">

    <TextView
        android:id="@+id/textView_travel_classe_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Categorie value"
        android:layout_marginBottom="15dp"
        android:textSize="11dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_travel_classe" />

    <TextView
        android:id="@+id/textView_travel_classe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="Categorie : "
        android:textSize="8dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/textView_travel_classe_value"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_agency_destination_value"
        tools:ignore="DuplicateIds" />

    <LinearLayout
        android:id="@+id/linearLayout_fond"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="5dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/bg_template_voyage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/imageView_main_container"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"/>
    <ImageView
        android:id="@+id/image_view_moreInfos"
        android:layout_width="25dp"
        android:elevation="2dp"
        android:layout_marginTop="15dp"
        android:layout_height="25dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toTopOf="@id/image_view_reserve"
        android:src="@drawable/ic_more_info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/linearLayout_fond" />

    <ImageView
        android:id="@+id/image_view_reserve"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_reserved"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@id/image_view_more"
        app:layout_constraintTop_toBottomOf="@id/image_view_moreInfos" />

    <ImageView
        android:id="@+id/image_view_more"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:elevation="2dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout_fond"
        android:padding="4dp"
        android:src="@drawable/ic_more"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_reserve" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageCicle_main_logo2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="128dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_logo_mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView_main_container"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_main_container"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="50dp"
        android:elevation="5dp"
        android:src="@drawable/backgroundblue2"
        app:layout_constraintBottom_toTopOf="@id/textView_agency_tarif_value"
        app:layout_constraintEnd_toStartOf="@id/image_view_moreInfos"
        app:layout_constraintStart_toEndOf="@+id/textView_agency_from"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView_agency_title"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginLeft="8dp"
        android:text="Agency : "
        android:layout_marginTop="15dp"
        android:textSize="9dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/textView_agency_value"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_agency_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Agency value"
        android:textSize="11dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_agency_from"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_agency_title" />

    <TextView
        android:id="@+id/textView_agency_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:text="Provenance : "
        android:textSize="8dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/textView_agency_provenance_value"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_agency_value" />

    <TextView
        android:id="@+id/textView_agency_provenance_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="provenance value"
        android:textSize="11dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/textView_agency_destination"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_agency_from"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/textView_agency_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:text="Destination : "
        android:textSize="8dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/textView_agency_destination_value"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_agency_provenance_value"
        tools:ignore="DuplicateIds" />

    <TextView
        android:id="@+id/textView_agency_destination_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Destination value"
        android:textSize="11dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/textView_travel_classe"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_agency_destination" />

    <TextView
        android:id="@+id/textView_agency_tarif_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:text="70000 XAF"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/imageView_main_container"
        app:layout_constraintRight_toRightOf="@id/imageView_main_container"
        app:layout_constraintTop_toBottomOf="@id/imageView_main_container" />

</android.support.constraint.ConstraintLayout>