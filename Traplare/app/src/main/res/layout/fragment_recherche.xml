<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:focusable="true"
android:focusableInTouchMode="true"
android:focusedByDefault="true"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".PlanningActivity"
android:scrollbars="none"
android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/linearLayout_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:cardElevation="3dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/textView_destination_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:text="Destination"
                android:textSize="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_destination_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Destination Value"
                android:textSize="11dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_destination_title" />

            <TextView
                android:id="@+id/textView_destination_date_depart_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Date de dÃ©part"
                android:textSize="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_destination_value" />

            <TextView
                android:id="@+id/textView_destination_date_depart_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Toutes les dates"
                android:textSize="11dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_destination_date_depart_title" />

            <TextView
                android:id="@+id/textView_destination_classe_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Classe du voyage"
                android:textSize="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_destination_date_depart_value" />

            <RatingBar
                android:id="@+id/ratingBar2"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:numStars="3"
                android:stepSize=".1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_destination_classe_title" />

            <TextView
                android:id="@+id/textView_prix_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Prix Max"
                android:textSize="11dp"
                app:layout_constraintLeft_toLeftOf="@id/seekBar_prix_plafond"
                app:layout_constraintRight_toRightOf="@id/seekBar_prix_plafond"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/seekBar_prix_plafond"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:min="0"
                android:max="1000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_prix_max"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView_prix_min"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginBottom="10dp"
                android:text="Prix Min"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/seekBar_prix_ceuil"
                app:layout_constraintRight_toRightOf="@id/seekBar_prix_ceuil"
                app:layout_constraintTop_toBottomOf="@id/seekBar_prix_ceuil" />

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/seekBar_prix_ceuil"
                android:rotation="270"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/textView_prix_min"
                app:layout_constraintRight_toLeftOf="@id/seekBar_prix_plafond"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_option">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView_voyagesList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>