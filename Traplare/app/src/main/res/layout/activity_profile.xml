<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="#f7f7f7"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="20dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textView_nom_famille"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    app:layout_constraintTop_toBottomOf="@id/textView_nom_user_value"
                    android:text="Nom de famille"/>

                <TextView
                    android:id="@+id/textView_nom_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Nom d' utilisateur"
                    android:textSize="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_nom_famille_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_nom_famille"
                    android:text="value nom de famille"/>

                <TextView
                    android:id="@+id/textView_nom_user_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="value nom d'utilisateur"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_nom_user" />

                <TextView
                    android:id="@+id/textView_prenom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    app:layout_constraintTop_toBottomOf="@id/textView_nom_famille_value"
                    android:text="Prenom"/>
                <TextView
                    android:id="@+id/textView_prenom_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_prenom"
                    android:text="value du prenom"/>
                <TextView
                    android:id="@+id/textView_num_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    app:layout_constraintTop_toBottomOf="@id/textView_prenom_value"
                    android:text="N° d'ientification"/>

                <TextView
                    android:id="@+id/textView_num_identity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:text="ABCNU0001478"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_num_identity" />
                <TextView
                    android:id="@+id/textView_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    app:layout_constraintTop_toBottomOf="@id/textView_num_identity_value"
                    android:text="Adressse mail"/>

                <TextView
                    android:id="@+id/textView_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Téléphone"
                    android:textSize="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_email_value" />

                <TextView
                    android:id="@+id/textView_email_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_email"
                    android:text="email.monemail@mail.com"/>

                <TextView
                    android:id="@+id/textView_phone_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+237 6 XX XX XX XX"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_phone" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>